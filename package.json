{
  "name": "cs-rin-updates",
  "private": true,
  "version": "3.18.8",
  "description": "RinChekr is a modern, high-performance desktop application designed to track game updates on cs.rin.ru. Unlike basic scrapers that just check for new posts, RinChekr uses smart \"Deep Scanning\" algorithms to differentiate between actual game releases and random forum chatter.",
  "author": "aijeculate",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder",
    "preview": "vite preview"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "lucide-react": "^0.263.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.0.3",
    "electron": "^25.3.0",
    "electron-builder": "^24.6.3",
    "typescript": "^5.0.2",
    "vite": "^4.4.5",
    "vite-plugin-electron": "^0.12.0",
    "vite-plugin-electron-renderer": "^0.14.5"
  },
  "build": {
    "appId": "com.rin.checker",
    "productName": "RinChekr",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "win": {
      "icon": "build/RinChekr.ico",
      "target": [
        "nsis",
        "portable"
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}